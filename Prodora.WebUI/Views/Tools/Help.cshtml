    <!-- Contact Section -->
    <div class="contact-section">
        <h2 class="section-title">Bizimle İletişime Geçin</h2>
        <div class="contact-grid">
            <div class="contact-card">
                <div class="contact-card-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <h4>7/24 Canlı Destek</h4>
                <p>Haftanın her günü, günün her saati yanınızdayız</p>
            </div>
            <div class="contact-card">
                <div class="contact-card-icon">
                    <i class="fas fa-phone"></i>
                </div>
                <h4>Telefon Desteği</h4>
                <p>+90 212 555 0123<br>Pazartesi-Cuma 09:00-18:00</p>
            </div>
            <div class="contact-card">
                <div class="contact-card-icon">
                    <i class="fas fa-envelope"></i>
                </div>
                <h4>E-posta Desteği</h4>
                <p>destek@prodora.com<br>24 saat içinde yanıtlıyoruz</p>
