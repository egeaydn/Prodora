@{
    ViewData["Title"] = "Sık Sorulan Sorular";
}

<!-- Font Awesome Icons -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

<link href="~/css/faq.css" rel="stylesheet" />

<div class="page-container fade-in">
    <!-- Hero Section -->
    <div class="hero-section">
        <h1 class="page-title">@ViewData["Title"]</h1>
        <p class="page-subtitle">
            Aradığınız cevabı bulamıyor musunuz? Aşağıdaki sık sorulan sorulara göz atın veya
            arama kutusunu kullanarak konuyla ilgili soruları bulun.
        </p>
    </div>

    <!-- Search Section -->
    <div class="search-section">
        <div class="search-container">
            <i class="fas fa-search search-icon"></i>
            <input type="text" class="faq-search-input" placeholder="Soru arayın..." id="faqSearch">
        </div>
    </div>

    <!-- Categories Section -->
    <div class="categories-section">
        <div class="categories-grid">
            <div class="category-item active" data-category="all">
                <i class="fas fa-th-large category-icon"></i>
                <div class="category-name">Tümü</div>
            </div>
            <div class="category-item" data-category="order">
                <i class="fas fa-shopping-cart category-icon"></i>
                <div class="category-name">Sipariş</div>
            </div>
            <div class="category-item" data-category="shipping">
                <i class="fas fa-truck category-icon"></i>
                <div class="category-name">Kargo</div>
            </div>
            <div class="category-item" data-category="payment">
                <i class="fas fa-credit-card category-icon"></i>
                <div class="category-name">Ödeme</div>
            </div>
            <div class="category-item" data-category="return">
                <i class="fas fa-undo category-icon"></i>
                <div class="category-name">İade</div>
            </div>
            <div class="category-item" data-category="account">
                <i class="fas fa-user category-icon"></i>
                <div class="category-name">Hesap</div>
            </div>
        </div>
    </div>

    <!-- FAQ Section -->
    <div class="faq-section">
        <div class="faq-item" data-category="order">
            <button class="faq-question">
                Siparişimi nasıl takip edebilirim?
                <i class="fas fa-chevron-down faq-icon"></i>
            </button>
            <div class="faq-answer">
                <div class="faq-answer-content">
                    Siparişinizi takip etmek için hesabınıza giriş yapın ve "Siparişlerim" bölümünden sipariş numaranızı seçin.
                    Ayrıca sipariş verdiğinizde e-posta adresinize gönderilen takip linkini de kullanabilirsiniz.
                </div>
            </div>
        </div>

        <div class="faq-item" data-category="shipping">
            <button class="faq-question">
                Kargo süresi ne kadar?
                <i class="fas fa-chevron-down faq-icon"></i>
            </button>
            <div class="faq-answer">
                <div class="faq-answer-content">
                    Standart kargo ile 2-3 iş günü, hızlı kargo ile 1-2 iş günü içinde siparişiniz size ulaşır.
                    Özel günlerde (bayram, indirim dönemleri) kargo süreleri uzayabilir.
                </div>
            </div>
        </div>

        <div class="faq-item" data-category="payment">
            <button class="faq-question">
                Hangi ödeme yöntemlerini kabul ediyorsunuz?
                <i class="fas fa-chevron-down faq-icon"></i>
            </button>
            <div class="faq-answer">
                <div class="faq-answer-content">
                    Kredi kartı, banka kartı, havale/EFT, kapıda ödeme ve taksitli ödeme seçeneklerini sunuyoruz.
                    Tüm ödeme işlemleri SSL güvenlik sertifikası ile korunmaktadır.
                </div>
            </div>
        </div>

        <div class="faq-item" data-category="return">
            <button class="faq-question">
                İade süreci nasıl işliyor?
                <i class="fas fa-chevron-down faq-icon"></i>
            </button>
            <div class="faq-answer">
                <div class="faq-answer-content">
                    Ürünü aldığınız tarihten itibaren 14 gün içinde iade edebilirsiniz.
                    İade için ürün orijinal ambalajında ve hasarsız olmalıdır. İade talebinizi hesabınızdan oluşturabilirsiniz.
                </div>
            </div>
        </div>

        <div class="faq-item" data-category="account">
            <button class="faq-question">
                Şifremi unuttum, ne yapmalıyım?
                <i class="fas fa-chevron-down faq-icon"></i>
            </button>
            <div class="faq-answer">
                <div class="faq-answer-content">
                    Giriş sayfasında "Şifremi Unuttum" linkine tıklayın ve e-posta adresinizi girin.
                    Size şifre sıfırlama linki gönderilecektir.
                </div>
            </div>
        </div>

        <div class="faq-item" data-category="order">
            <button class="faq-question">
                Siparişimi iptal edebilir miyim?
                <i class="fas fa-chevron-down faq-icon"></i>
            </button>
            <div class="faq-answer">
                <div class="faq-answer-content">
                    Siparişiniz henüz kargoya verilmemişse iptal edebilirsiniz.
                    Bunun için müşteri hizmetlerimizle iletişime geçin veya hesabınızdan iptal talebinde bulunun.
                </div>
            </div>
        </div>

        <div class="faq-item" data-category="shipping">
            <button class="faq-question">
                Kargo ücreti ne kadar?
                <i class="fas fa-chevron-down faq-icon"></i>
            </button>
            <div class="faq-answer">
                <div class="faq-answer-content">
                    150 TL ve üzeri alışverişlerde kargo ücretsizdir.
                    Altındaki siparişler için kargo ücreti 15 TL'dir.
                </div>
            </div>
        </div>

        <div class="faq-item" data-category="payment">
            <button class="faq-question">
                Taksit seçenekleri nelerdir?
                <i class="fas fa-chevron-down faq-icon"></i>
            </button>
            <div class="faq-answer">
                <div class="faq-answer-content">
                    Kredi kartları ile 2, 3, 6, 9 ve 12 taksit seçenekleri sunuyoruz.
                    Bazı bankalar için özel taksit kampanyaları da mevcuttur.
                </div>
            </div>
        </div>

        <div class="no-results">
            <i class="fas fa-search"></i>
            <h3>Sonuç bulunamadı</h3>
            <p>Aradığınız kriterlere uygun soru bulunamadı. Lütfen farklı anahtar kelimeler deneyin.</p>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('faqSearch');
        const categoryItems = document.querySelectorAll('.category-item');
        const faqItems = document.querySelectorAll('.faq-item');
        const faqQuestions = document.querySelectorAll('.faq-question');
        const noResults = document.querySelector('.no-results');

        // FAQ accordion functionality
        faqQuestions.forEach(question => {
            question.addEventListener('click', function() {
                const faqItem = this.parentElement;
                const isActive = faqItem.classList.contains('active');

                // Close all other FAQ items
                faqItems.forEach(item => {
                    item.classList.remove('active');
                });

                // Toggle current item
                if (!isActive) {
                    faqItem.classList.add('active');
                }
            });
        });

        // Category filtering
        categoryItems.forEach(category => {
            category.addEventListener('click', function() {
                const selectedCategory = this.getAttribute('data-category');

                // Update active category
                categoryItems.forEach(item => {
                    item.classList.remove('active');
                });
                this.classList.add('active');

                // Filter FAQ items
                filterFAQs(selectedCategory, searchInput.value);
            });
        });

        // Search functionality
        searchInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const activeCategory = document.querySelector('.category-item.active').getAttribute('data-category');

            filterFAQs(activeCategory, searchTerm);
        });

        function filterFAQs(category, searchTerm) {
            let visibleCount = 0;

            faqItems.forEach(item => {
                const itemCategory = item.getAttribute('data-category');
                const questionText = item.querySelector('.faq-question').textContent.toLowerCase();
                const answerText = item.querySelector('.faq-answer-content').textContent.toLowerCase();

                const categoryMatch = category === 'all' || itemCategory === category;
                const searchMatch = searchTerm === '' ||
                                   questionText.includes(searchTerm) ||
                                   answerText.includes(searchTerm);

                if (categoryMatch && searchMatch) {
                    item.style.display = 'block';
                    visibleCount++;
                } else {
                    item.style.display = 'none';
                    item.classList.remove('active'); // Close if hidden
                }
            });

            // Show/hide no results message
            if (visibleCount === 0) {
                noResults.classList.add('show');
            } else {
                noResults.classList.remove('show');
            }
        }
    });
</script>