@using Prodora.Entitys
@model Prodora.WebUI.Models.ProductListModel
@{
    ViewData["Title"] = "Ana Sayfa";
}

<link href="~/css/home-index.css" rel="stylesheet" />

<!-- HERO SECTION -->
<div class="hero-section">
    <div class="hero-content">
        <div class="hero-title">Prodora'ya Hoşgeldiniz</div>
        <div class="hero-subtitle">En yeni ürünler, en iyi fırsatlar ve çok daha fazlası burada!</div>
    </div>
</div>

<div class="main-container">
    <div class="content-grid">
        <aside class="category-sidebar">
            <div class="category-title">Kategoriler</div>
            <ul class="category-list">
                @await Component.InvokeAsync("CategoryList")
            </ul>
        </aside>
        <main class="products-section">
            <div class="products-grid">
                @if (Model.Products != null && Model.Products.Count > 0)
                {
                    @foreach (Product product in Model.Products)
                    {
                        <partial name="_products" for="@product" />
                    }
                }
                else
                {
                    <p>Ürün Bulunamadı.</p>
                }
            </div>
        </main>
    </div>
</div>