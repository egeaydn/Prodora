﻿@using Prodora.WebUI.Models
@using Prodora.Entitys
@model ProductListModel

@{
    ViewData["Title"] = "InstrumentHub";
}
<style>
    
</style>

<div class="row d-flex justify-content-center">
    <div class="col-md-12 d-flex justify-content-center mt-4">
        <div class="container p-0" style="max-width: 100vw; width: 90vw; height: 350px; overflow: hidden; border-radius: 18px; margin-bottom: 48px;">
            <partial name="_slider" />
        </div>
    </div>
    <div class="main-container" style="padding-left: 32px; padding-right: 32px;">
        <div class="content-grid">
            <aside class="category-sidebar">
                <ul class="category-list">
                    @await Component.InvokeAsync("CategoryList")
                </ul>
            </aside>
            <main class="products-section">
                <div class="products-grid">
                    @if (Model.Products != null && Model.Products.Count > 0)
                    {
                        @foreach (Product product in Model.Products)
                        {
                            <partial name="_products" for="@product" />
                        }
                    }
                    else
                    {
                        <p>Ürün Bulanamadı.</p>
                    }
                </div>
            </main>
        </div>
    </div>

</div>