@using Prodora.Entitys
@model Prodora.WebUI.Models.ProductListModel
@{
    ViewData["Title"] = "Home Page";
}
<link href="~/css/Home.css" rel="stylesheet" />

<div class="row d-flex justify-content-center">
   
    <div class="row mt-5">
        <div class="col-md-3">
            @await Component.InvokeAsync("CategoryList")
        </div> 
        <div class="col-md-9">

            <div class="row">
                @if (Model.Products != null && Model.Products.Count > 0)
                {
                    @foreach (Product product in Model.Products)
                    {
                        <partial name="_products" model="@product" />
                    }
                }
                else
                {
                    <p>Ürün Bulanamadı.</p>
                }
            </div>
        </div>
    </div>

        <div class="slider-container">
        <div class="slider">
            <div class="slide active">
                <div class="slide-content">
                    <h2>Yeni Sezon Koleksiyonu</h2>
                    <p>En trend ürünler, en uygun fiyatlarla</p>
                    <a href="#" class="shop-now">Hemen Keşfet</a>
                </div>
                <img src="https://images.unsplash.com/photo-1445205170230-053b83016050?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" alt="Yeni Sezon">
            </div>
            <div class="slide">
                <div class="slide-content">
                    <h2>Büyük Yaz İndirimi</h2>
                    <p>%50'ye varan indirimler</p>
                    <a href="#" class="shop-now">İndirimleri Keşfet</a>
                </div>
                <img src="https://images.unsplash.com/photo-1441984904996-e0b6ba687e04?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" alt="Yaz İndirimi">
            </div>
            <div class="slide">
                <div class="slide-content">
                    <h2>Yeni Gelenler</h2>
                    <p>En yeni ürünler burada</p>
                    <a href="#" class="shop-now">Yeni Ürünleri Keşfet</a>
                </div>
                <img src="https://images.unsplash.com/photo-1445205170230-053b83016050?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80" alt="Yeni Gelenler">
            </div>
        </div>
        <button class="slider-btn prev">
            <i class="fas fa-chevron-left"></i>
        </button>
        <button class="slider-btn next">
            <i class="fas fa-chevron-right"></i>
        </button>
        <div class="slider-dots">
            <span class="dot active"></span>
            <span class="dot"></span>
            <span class="dot"></span>
        </div>
    </div>

    <div class="main-content">
        <!-- Filtreleme Paneli -->
        <aside class="filter-panel">
            <div class="filter-header">
                <h3>Filtreler</h3>
                <button class="clear-filters">Filtreleri Temizle</button>
            </div>

            <!-- Kategori Filtresi -->
            <div class="filter-section">
                <div class="filter-title">
                    <h4>Kategoriler</h4>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="filter-content">
                    <div class="filter-group">
                        <label class="checkbox-container">
                            <input type="checkbox" value="kadin">
                            <span class="checkmark"></span>
                            Kadın
                        </label>
                        <label class="checkbox-container">
                            <input type="checkbox" value="erkek">
                            <span class="checkmark"></span>
                            Erkek
                        </label>
                        <label class="checkbox-container">
                            <input type="checkbox" value="cocuk">
                            <span class="checkmark"></span>
                            Çocuk
                        </label>
                    </div>
                </div>
            </div>

            <!-- Alt Kategori Filtresi -->
            <div class="filter-section">
                <div class="filter-title">
                    <h4>Alt Kategoriler</h4>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="filter-content">
                    <div class="filter-group">
                        <label class="checkbox-container">
                            <input type="checkbox" value="elbise">
                            <span class="checkmark"></span>
                            Elbise
                        </label>
                        <label class="checkbox-container">
                            <input type="checkbox" value="pantolon">
                            <span class="checkmark"></span>
                            Pantolon
                        </label>
                        <label class="checkbox-container">
                            <input type="checkbox" value="ust-giyim">
                            <span class="checkmark"></span>
                            Üst Giyim
                        </label>
                        <label class="checkbox-container">
                            <input type="checkbox" value="ayakkabi">
                            <span class="checkmark"></span>
                            Ayakkabı
                        </label>
                    </div>
                </div>
            </div>

            <!-- Fiyat Aralığı Filtresi -->
            <div class="filter-section">
                <div class="filter-title">
                    <h4>Fiyat Aralığı</h4>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="filter-content">
                    <div class="price-range">
                        <div class="price-inputs">
                            <input type="number" id="minPrice" placeholder="Min">
                            <span>-</span>
                            <input type="number" id="maxPrice" placeholder="Max">
                        </div>
                        <div class="price-slider">
                            <input type="range" id="priceRange" min="0" max="5000" step="100">
                        </div>
                    </div>
                </div>
            </div>

            <!-- Marka Filtresi -->
            <div class="filter-section">
                <div class="filter-title">
                    <h4>Markalar</h4>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="filter-content">
                    <div class="filter-group">
                        <label class="checkbox-container">
                            <input type="checkbox" value="nike">
                            <span class="checkmark"></span>
                            Nike
                        </label>
                        <label class="checkbox-container">
                            <input type="checkbox" value="zara">
                            <span class="checkmark"></span>
                            Zara
                        </label>
                        <label class="checkbox-container">
                            <input type="checkbox" value="mavi">
                            <span class="checkmark"></span>
                            Mavi
                        </label>
                        <label class="checkbox-container">
                            <input type="checkbox" value="pullbear">
                            <span class="checkmark"></span>
                            Pull&Bear
                        </label>
                        <label class="checkbox-container">
                            <input type="checkbox" value="bershka">
                            <span class="checkmark"></span>
                            Bershka
                        </label>
                        <label class="checkbox-container">
                            <input type="checkbox" value="adidas">
                            <span class="checkmark"></span>
                            Adidas
                        </label>
                    </div>
                </div>
            </div>

            <!-- Beden Filtresi -->
            <div class="filter-section">
                <div class="filter-title">
                    <h4>Bedenler</h4>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="filter-content">
                    <div class="filter-group">
                        <label class="checkbox-container">
                            <input type="checkbox" value="xs">
                            <span class="checkmark"></span>
                            XS
                        </label>
                        <label class="checkbox-container">
                            <input type="checkbox" value="s">
                            <span class="checkmark"></span>
                            S
                        </label>
                        <label class="checkbox-container">
                            <input type="checkbox" value="m">
                            <span class="checkmark"></span>
                            M
                        </label>
                        <label class="checkbox-container">
                            <input type="checkbox" value="l">
                            <span class="checkmark"></span>
                            L
                        </label>
                        <label class="checkbox-container">
                            <input type="checkbox" value="xl">
                            <span class="checkmark"></span>
                            XL
                        </label>
                    </div>
                </div>
            </div>

            <!-- Renk Filtresi -->
            <div class="filter-section">
                <div class="filter-title">
                    <h4>Renkler</h4>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="filter-content">
                    <div class="color-options">
                        <label class="color-option">
                            <input type="checkbox" value="siyah">
                            <span class="color-circle" style="background-color: #000000;"></span>
                        </label>
                        <label class="color-option">
                            <input type="checkbox" value="beyaz">
                            <span class="color-circle" style="background-color: #FFFFFF; border: 1px solid #e0e0e0;"></span>
                        </label>
                        <label class="color-option">
                            <input type="checkbox" value="kirmizi">
                            <span class="color-circle" style="background-color: #FF0000;"></span>
                        </label>
                        <label class="color-option">
                            <input type="checkbox" value="mavi">
                            <span class="color-circle" style="background-color: #0000FF;"></span>
                        </label>
                    </div>
                </div>
            </div>

            <!-- İndirim Filtresi -->
            <div class="filter-section">
                <div class="filter-title">
                    <h4>İndirim Oranı</h4>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="filter-content">
                    <div class="filter-group">
                        <label class="checkbox-container">
                            <input type="checkbox" value="50">
                            <span class="checkmark"></span>
                            %50 ve üzeri
                        </label>
                        <label class="checkbox-container">
                            <input type="checkbox" value="30">
                            <span class="checkmark"></span>
                            %30 ve üzeri
                        </label>
                        <label class="checkbox-container">
                            <input type="checkbox" value="20">
                            <span class="checkmark"></span>
                            %20 ve üzeri
                        </label>
                    </div>
                </div>
            </div>

            <!-- Kargo Filtresi -->
            <div class="filter-section">
                <div class="filter-title">
                    <h4>Kargo</h4>
                    <i class="fas fa-chevron-down"></i>
                </div>
                <div class="filter-content">
                    <div class="filter-group">
                        <label class="checkbox-container">
                            <input type="checkbox" value="free-shipping">
                            <span class="checkmark"></span>
                            Ücretsiz Kargo
                        </label>
                        <label class="checkbox-container">
                            <input type="checkbox" value="same-day">
                            <span class="checkmark"></span>
                            Aynı Gün Kargo
                        </label>
                    </div>
                </div>
            </div>
        </aside>

    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>TrendStore</h3>
                <p>En trend ürünler, en uygun fiyatlarla TrendStore'da!</p>
