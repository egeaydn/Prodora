@using Prodora.Entitys
@model Prodora.WebUI.Models.ProductListModel
@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = null;
}

<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>PRODORA - Hoş Geldiniz</title>
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<link href="~/css/Home.css" rel="stylesheet" />

<body>
    <!-- Loading Screen - Removed for immediate display -->
    <!-- Animated Background -->
    <div class="animated-background"></div>

    <!-- Floating Particles -->
    <div class="particles">
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
        <div class="particle"></div>
    </div>

    <!-- Main Content -->
    <div class="welcome-container">
        <!-- Logo -->
        <div class="logo-container">
            <div class="logo">PRODORA</div>
        </div>

        <!-- Welcome Text -->
        <div class="welcome-text">
            <h1 class="welcome-title">Hoş Geldiniz</h1>
            <p class="welcome-subtitle">Premium E-Ticaret Deneyimi</p>
            <p class="welcome-description">
                Modern teknoloji ile buluşan alışveriş deneyimi. En kaliteli ürünler, en hızlı teslimat ve mükemmel müşteri hizmetiyle yanınızdayız.
            </p>
        </div>

        <!-- Feature Cards -->
        <div class="features-container">
            <div class="feature-card">
                <i class="fas fa-rocket feature-icon"></i>
                <h3 class="feature-title">Hızlı Teslimat</h3>
                <p class="feature-description">24 saat içinde kapınızda, ücretsiz kargo seçenekleri ile.</p>
            </div>
            <div class="feature-card">
                <i class="fas fa-shield-alt feature-icon"></i>
                <h3 class="feature-title">Güvenli Alışveriş</h3>
                <p class="feature-description">256-bit SSL şifreleme ile %100 güvenli ödeme sistemleri.</p>
            </div>
            <div class="feature-card">
                <i class="fas fa-headset feature-icon"></i>
                <h3 class="feature-title">7/24 Destek</h3>
                <p class="feature-description">Uzman ekibimiz her zaman hizmetinizde, canlı destek hattı.</p>
            </div>
        </div>

        <!-- Stats -->
        <div class="stats-container">
            <div class="stat-item">
                <span class="stat-number" data-count="10000">0</span>
                <span class="stat-label">Mutlu Müşteri</span>
            </div>
            <div class="stat-item">
                <span class="stat-number" data-count="5000">0</span>
                <span class="stat-label">Ürün Çeşidi</span>
            </div>
            <div class="stat-item">
                <span class="stat-number" data-count="50">0</span>
                <span class="stat-label">Şehir</span>
            </div>
        </div>

        <!-- CTA Button -->
        <div class="cta-container">
            <a href="/products/all" class="cta-button" onclick="enterSite()">
                <span>Alışverişe Başla</span>
                <i class="fas fa-arrow-right cta-icon"></i>
            </a>
        </div>

</body>
<script src="~/js/home.js">

</script>