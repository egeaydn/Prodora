@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@model RegisterPage
@{
    ViewData["Title"] = "Kayıt Ol";
}
<link href="~/css/register.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

<div class="split-bg">
    <div class="split-left">
        <div class="left-content">
            <span class="vector-icon">
                <span class="logo-circle">
                    <img src="/img/ProdoraLogo.jpg" alt="Prodora Logo" class="avatar-logo" />
                </span>
            </span>
            <h1>Aramıza Katıl!</h1>
            <p class="slogan">Kayıt olarak avantajlardan yararlanmaya başla.</p>
            <blockquote class="motto">Birlikte daha güçlüyüz.</blockquote>
            <ul class="features">
                <li><span>✔</span> Hızlı kayıt</li>
                <li><span>✔</span> Güvenli bilgiler</li>
                <li><span>✔</span> Kolay erişim</li>
            </ul>
        </div>
    </div>
    <div class="split-right">
        <div class="login-container">
            <div class="avatar">
                <img src="/img/ProdoraLogo.jpg" alt="Prodora Logo" class="avatar-logo" />
            </div>
            <h2 class="login-title">Kayıt Ol</h2>
            <div asp-validation-summary="ModelOnly" class="login-alert"></div>
            <form class="login-form" asp-action="Register" asp-controller="Account" method="POST" autocomplete="off">
                @Html.AntiForgeryToken()
                <div class="input-group">
                    <input asp-for="FullName" type="text" required autocomplete="off" />
                    <label asp-for="FullName">Tam Adınız</label>
                    <span class="input-icon">
                        <svg width="18" height="18" fill="none" stroke="#a5b4fc" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24"><circle cx="12" cy="7" r="4" /><path d="M5.5 21a8.38 8.38 0 0 1 13 0" /></svg>
                    </span>
                    <span asp-validation-for="FullName" class="error-message"></span>
                </div>
                <div class="input-group">
                    <input asp-for="UserName" type="text" required autocomplete="off" />
                    <label asp-for="UserName">Kullanıcı Adı</label>
                    <span class="input-icon">
                        <svg width="18" height="18" fill="none" stroke="#a5b4fc" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24"><circle cx="12" cy="7" r="4" /><path d="M5.5 21a8.38 8.38 0 0 1 13 0" /></svg>
                    </span>
                    <span asp-validation-for="UserName" class="error-message"></span>
                </div>
                <div class="input-group">
                    <input asp-for="Email" type="email" required autocomplete="off" />
                    <label asp-for="Email">E-posta</label>
                    <span class="input-icon">
                        <svg width="18" height="18" fill="none" stroke="#a5b4fc" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24"><rect x="2" y="4" width="20" height="16" rx="2" /><path d="M22 6 12 13 2 6" /></svg>
                    </span>
                    <span asp-validation-for="Email" class="error-message"></span>
                </div>
                <div class="input-group">
                    <input asp-for="Password" type="password" required autocomplete="off" />
                    <label asp-for="Password">Şifre</label>
                    <span class="input-icon">
                        <svg width="18" height="18" fill="none" stroke="#a5b4fc" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24"><rect x="3" y="11" width="18" height="11" rx="2" /><path d="M7 11V7a5 5 0 0 1 10 0v4" /></svg>
                    </span>
                    <span asp-validation-for="Password" class="error-message"></span>
                </div>
                <div class="input-group">
                    <input asp-for="RePassword" type="password" required autocomplete="off" />
                    <label asp-for="RePassword">Şifre Tekrar</label>
                    <span class="input-icon">
                        <svg width="18" height="18" fill="none" stroke="#a5b4fc" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24"><rect x="3" y="11" width="18" height="11" rx="2" /><path d="M7 11V7a5 5 0 0 1 10 0v4" /></svg>
                    </span>
                    <span asp-validation-for="RePassword" class="error-message"></span>
                </div>
                <button type="submit" class="login-btn">Kayıt Ol</button>
            </form>
            <div class="login-footer">
                <span>Zaten hesabınız var mı?</span>
                <a href="/Account/Login">Giriş Yap</a>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/modules/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/modules/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>
}