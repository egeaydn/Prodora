@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
@model LoginModel
@{
    ViewData["Title"] = "Giriş Yap";
}
<link href="~/css/login.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

<div class="split-bg">
    <div class="split-left">
        <div class="left-content">
            <span class="vector-icon">
                <span class="logo-circle">
                    <img src="/img/ProdoraLogo.jpg" alt="Prodora Logo" class="avatar-logo" />
                </span>
            </span>
            <h1>Yeniliğe Hoş Geldin!</h1>
            <p class="slogan">Hayallerine bir adım daha yaklaşmak için giriş yap.</p>
            <blockquote class="motto">Başarı, cesaretle başlar.</blockquote>
            <ul class="features">
                <li><span>✔</span> Modern ve sade tasarım</li>
                <li><span>✔</span> Güvenli giriş</li>
                <li><span>✔</span> Hızlı ve kolay kullanım</li>
            </ul>
        </div>
    </div>
    <div class="split-right">
        <div class="login-container">
            <div class="avatar">
                <img src="/img/ProdoraLogo.jpg" alt="Prodora Logo" class="avatar-logo" />
            </div>
            <h2 class="login-title">Giriş Yap</h2>
            <div asp-validation-summary="ModelOnly" class="login-alert"></div>
            <form class="login-form" asp-action="Login" asp-controller="Account" method="POST" autocomplete="off">
                @Html.AntiForgeryToken()
                <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                <div class="input-group">
                    <input asp-for="Email" type="email" id="username" required autocomplete="off" />
                    <label for="username">E-posta</label>
                    <span class="input-icon">
                        <svg width="18" height="18" fill="none" stroke="#a5b4fc" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24"><circle cx="12" cy="7" r="4"/><path d="M5.5 21a8.38 8.38 0 0 1 13 0"/></svg>
                    </span>
                    <span asp-validation-for="Email" class="error-message"></span>
                </div>
                <div class="input-group">
                    <input asp-for="Password" type="password" id="password" required autocomplete="off" />
                    <label for="password">Şifre</label>
                    <span class="input-icon">
                        <svg width="18" height="18" fill="none" stroke="#a5b4fc" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24"><rect x="3" y="11" width="18" height="11" rx="2"/><path d="M7 11V7a5 5 0 0 1 10 0v4"/></svg>
                    </span>
                    <span asp-validation-for="Password" class="error-message"></span>
                </div>
                <button type="submit" class="login-btn">Giriş Yap</button>
            </form>
            <div class="login-footer">
                <a href="/Account/ForgotPassword">Şifremi Unuttum?</a>
                <span> | </span>
                <a href="/Account/Register">Hesap Oluştur</a>
            </div>
        </div>
    </div>
</div>
<script src="Assets/js/main.js"></script>