@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
    ViewData["Title"] = "Şifremi Unuttum";
}
<link href="~/css/login.css" rel="stylesheet" />
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">

<div class="split-bg">
    <div class="split-left">
        <div class="left-content">
            <span class="vector-icon">
                <span class="logo-circle">
                    <img src="/img/ProdoraLogo.jpg" alt="Prodora Logo" class="avatar-logo" />
                </span>
            </span>
            <h1>Şifreni mi Unuttun?</h1>
            <p class="slogan">Sorun değil! Hesabına tekrar erişmek için e-posta adresini gir.</p>
            <blockquote class="motto">Güvenliğin bizim için önemli.</blockquote>
            <ul class="features">
                <li><span>✔</span> Kolay şifre sıfırlama</li>
                <li><span>✔</span> Güvenli bağlantı</li>
                <li><span>✔</span> Hızlı destek</li>
            </ul>
        </div>
    </div>
    <div class="split-right">
        <div class="login-container">
            <div class="avatar">
                <img src="/img/ProdoraLogo.jpg" alt="Prodora Logo" class="avatar-logo" />
            </div>
            <h2 class="login-title">Şifremi Unuttum</h2>
            <form class="login-form" asp-action="ForgotPassword" asp-controller="Account" method="POST" autocomplete="off">
                <div class="input-group">
                    <input name="Email" type="email" required autocomplete="off" />
                    <label for="Email">E-posta</label>
                    <span class="input-icon">
                        <svg width="18" height="18" fill="none" stroke="#a5b4fc" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24"><rect x="2" y="4" width="20" height="16" rx="2" /><path d="M22 6 12 13 2 6" /></svg>
                    </span>
                </div>
                <button type="submit" class="login-btn">Şifre Sıfırlama Linki Gönder</button>
            </form>
            <div class="login-footer">
                <a href="/Account/Login">Girişe dön</a>
            </div>
        </div>
    </div>
</div>
