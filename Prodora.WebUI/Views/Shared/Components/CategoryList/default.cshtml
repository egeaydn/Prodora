@model CategoryListViewModel

<ul class="list-group category-list">
    <a href="/products/all">
    <li class="list-group-item list-group-item-action">
        <strong>All Products</strong>
    </li>
    </a>
    @foreach (var category in Model.Categories)
    {
        <a asp-controller="Shop" asp-action="List" asp-route-category="@category.CategoryName.ToLower()"
           class="list-group-item list-group-item-action @(Model.SelectedCategory == category.CategoryName.ToLower() ? "active" : "")">

            @category.CategoryName
        </a>
    }
</ul>