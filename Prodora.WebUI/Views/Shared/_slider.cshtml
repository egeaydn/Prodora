<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="~/css/slider.css" rel="stylesheet" />
<!-- Bootstrap JS (popper dahil) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<div class="custom-slider-container">
    <div id="carouselExampleSlidesOnly" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/slidergym1.jpg" class="custom-slider-img" alt="Slider 1">
            </div>
            <div class="carousel-item">
                <img src="~/img/slidergym2.jpg" class="custom-slider-img" alt="Slider 2">
            </div>
            <div class="carousel-item">
                <img src="~/img/slidergym3.jpg" class="custom-slider-img" alt="Slider 3">
            </div>
            <div class="carousel-item">
                <img src="~/img/slidergym4.jpg" class="custom-slider-img" alt="Slider 4">
            </div>
            <div class="carousel-item">
                <img src="~/img/slidergym5.jpg" class="custom-slider-img" alt="Slider 5">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleSlidesOnly" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleSlidesOnly" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>