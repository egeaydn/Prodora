<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Modern Ürün Kartı</title>
    <link href="~/css/navbar.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>

<body>
﻿
<nav class="navbar">
    <div class="nav-container">
        <div class="nav-left">
            <a href="#" class="nav-logo">
                <i class="fas fa-shopping-bag"></i>
                <span>TrendStore</span>
            </a>
            <div class="nav-search">
                <input type="text" placeholder="Aradığınız ürün, kategori veya markayı yazınız">
                <button type="button">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
        <div class="nav-right">
            <div class="nav-menu">
               
                <a href="favorites.html" class="nav-link">
                    <i class="far fa-heart"></i>
                    <span>Favorilerim</span>
                    <span class="badge" id="favoriteCount">0</span>
                </a>

                    @if (User.Identity.IsAuthenticated)
                    {
                      
                            <a class="nav-link" asp-controller="Account" asp-action="Logout">
                            <i class="far fa-user"></i>
                            <span>Hesabım</span>
                            </a>
                    }
                    else
                    {

                            <a class="nav-link" asp-controller="Account" asp-action="Login">
                                <span>Login</span>
                            </a>

                            <a class="nav-link"  asp-controller="Account" asp-action="Register">
							    <span>Register</span>
                            </a>
                    }

                 @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" asp-controller="Admin" asp-action="CreateProduct">Add Product</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" href="/admin/products">Admin Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" asp-controller="Admin" asp-action="CreateCategory">Create Category</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" asp-controller="Admin" asp-action="CategoryList">Category List</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" asp-controller="Cart" asp-action="Index">Cart</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" aria-current="page" asp-controller="Cart" asp-action="GetOrders">Orders</a>
                            </li>
                        }
                    }


            </div>
        </div>
    </div>
    <div class="nav-categories">
        <div class="nav-container">
            <ul class="category-menu">
                <li><a href="#">Kadın</a></li>
                <li><a href="#">Erkek</a></li>
                <li><a href="#">Çocuk</a></li>
                <li><a href="#">Ev & Yaşam</a></li>
                <li><a href="#">Süpermarket</a></li>
                <li><a href="#">Kozmetik</a></li>
                <li><a href="#">Ayakkabı & Çanta</a></li>
                <li><a href="#">Elektronik</a></li>
                <li><a href="#">Spor & Outdoor</a></li>
            </ul>
        </div>
    </div>
</nav>

</body>
<script src="~/js/script.js"></script>
<script src="~/js/product-detail.js"></script>