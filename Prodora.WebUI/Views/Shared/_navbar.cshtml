<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Custom Navbar CSS -->
<link href="~/css/navbar.css" rel="stylesheet" />

<!-- Top Bar (Header bilgileri) -->
<div class="top-header">
    <div class="container">
        <div class="top-header-content">
            <div class="top-left">
                <a href="/campaigns" class="top-link">Kampanyalar</a>
                <a href="/help" class="top-link">Yardım</a>
            </div>
            <div class="top-right">
                <a href="/affiliate" class="top-link">Satıcı Girişi</a>
                @if (!User.Identity.IsAuthenticated)
                {
                    <a href="/Account/Login" class="top-link">Giriş Yapın</a>
                    <a href="/Account/Register" class="top-link">Kayıt Olun</a>
                }
            </div>
        </div>
    </div>
</div>

<!-- Main Navbar -->
<nav class="main-navbar">
    <div class="container">
        <div class="navbar-content">
            <!-- Logo Section -->
            <div class="logo-section">
                <a href="/" class="logo-link">
                    <span class="logo-text">prodora</span>
                    <span class="logo-subtitle">Premium'u keşfet</span>
                </a>
            </div>

            <!-- Search Section -->
            <div class="search-section">
                <div class="search-container">
                    <input type="text" class="search-input" placeholder="Ürün, kategori veya marka ara" id="searchInput">
                    <button class="search-btn" type="button">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>

            <!-- User Actions -->
            <div class="user-actions">
                @if (User.Identity.IsAuthenticated)
                {
                

                    <!-- User Account -->
                    <div class="user-section dropdown">
                        <button class="user-btn dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fas fa-user"></i>
                            <span>Hesabım<br><small>@User.Identity.Name</small></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Manage">Hesap Bilgileri</a></li>
                            <li><a class="dropdown-item" asp-controller="Basket" asp-action="GetOrders">Siparişlerim</a></li>
                            @if (User.IsInRole("admin"))
                            {
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" asp-controller="Admin" asp-action="CreateProduct">Admin Panel</a></li>
                            }
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Çıkış Yap</a></li>
                        </ul>
                    </div>

                    @if (!User.IsInRole("admin"))
                    {
                        <!-- Cart -->
                        <div >
                            <a asp-controller="Basket" asp-action="Home" class="cart-btn">
                                <i class="fas fa-shopping-cart"></i>
                                <span>Sepetim</span>
                            </a>
                        </div>
                    }
                }
                else
                {
                    <div class="auth-section">
                        <a href="/Account/Login" class="auth-btn">
                            <i class="fas fa-sign-in-alt"></i>
                            <span>Giriş Yap</span>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</nav>

<!-- Category Navigation -->
<div class="category-navbar">
    <div class="container">
        <div class="category-nav-content">
            <a class="category-item" href="/products/all">Tüm Ürünler</a>
